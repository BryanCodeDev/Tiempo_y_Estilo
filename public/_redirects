# Netlify _redirects file para TIEMPO Y ESTILO
# Coloca este archivo en la carpeta public/

# Redirigir todas las rutas SPA a index.html (SPA fallback - debe estar PRIMERO)
/*    /index.html   200

# Configuración específica para rutas de productos
/producto/*  /index.html  200

# Configuración específica para otras rutas SPA
/api/*  /index.html  200

# Configuración específica para rutas de categorías
/relojes-hombre  /index.html  200
/relojes-deportivos  /index.html  200

# Configuración específica para rutas de búsqueda
/buscar/*  /index.html  200

# Para Apache (.htaccess - coloca en public/)
# <IfModule mod_rewrite.c>
#   RewriteEngine On
#   RewriteBase /
#   RewriteRule ^index\.html$ - [L]
#   RewriteCond %{REQUEST_FILENAME} !-f
#   RewriteCond %{REQUEST_FILENAME} !-d
#   RewriteRule . /index.html [L]
# </IfModule>

# Para Nginx (configuración del servidor)
# location / {
#   try_files $uri $uri/ /index.html;
# }

